UID=1000
GID=1000

# === Model Backend ===
# Base URL for OpenAI-compatible API (Ollama, vLLM, OpenAI, etc.)
CSR_OLLAMA_BASE_URL=http://localhost:11434/v1
# Model identifier (must be available at the base URL)
CSR_MODEL_ID=qwen2.5:32b
# API key ("ollama" for local Ollama, real key for OpenAI/vLLM)
CSR_MODEL_API_KEY=ollama
# Request timeout in seconds
CSR_MODEL_TIMEOUT=3600
# Sampling temperature (0.0 = deterministic, 1.0 = creative)
CSR_MODEL_TEMPERATURE=0.1
# JSON mode (set false for models that don't support response_format)
CSR_MODEL_JSON_MODE=true

# === Standards ===
# Directory containing standards JSON files
CSR_STANDARDS_DIR=standards

# === Auth ===
# Bearer token for API authentication
CSR_AUTH_TOKEN=demo-token

# === Content ===
# Maximum content length in characters
CSR_MAX_CONTENT_LENGTH=8000

# === Policy ===
# Version string included in response metadata
CSR_POLICY_VERSION=1.0.0
# Path to policy tuning YAML
CSR_POLICY_CONFIG_PATH=config/policy.yaml
# Path to prompt templates YAML
CSR_PROMPTS_CONFIG_PATH=config/prompts.yaml

# === Policy overrides (override values from policy.yaml via env) ===
# CSR_POLICY_RETRIEVAL_K_LOW=6
# CSR_POLICY_RETRIEVAL_K_MEDIUM=10
# CSR_POLICY_RETRIEVAL_K_HIGH=14
# CSR_POLICY_THRESHOLDS_VIOLATION_LOW=0.85
# CSR_POLICY_THRESHOLDS_VIOLATION_MEDIUM=0.75
# CSR_POLICY_THRESHOLDS_VIOLATION_HIGH=0.70
# CSR_POLICY_DEFAULTS_MIN_CONFIDENCE=0.55
# CSR_POLICY_DEFAULTS_MAX_OBSERVATIONS=25

# === Server ===
# CORS allowed origins (comma-separated, "*" for all)
CSR_CORS_ORIGINS=*
# Log level (DEBUG, INFO, WARNING, ERROR)
CSR_LOG_LEVEL=INFO
# Listen address and port
CSR_HOST=0.0.0.0
CSR_PORT=9020
